# :command.parse_requirements
bamon_config_parse_requirements() {
  # :command.fixed_flags_filter
  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in
      --help | -h)
        long_usage=yes
        bamon_config_usage
        exit
        ;;

      *)
        break
        ;;

    esac
  done

  # :command.command_filter
  action=${1:-}

  case $action in
    -*) ;;

    edit)
      action="edit"
      shift
      bamon_config_edit_parse_requirements "$@"
      shift $#
      ;;

    show)
      action="show"
      shift
      bamon_config_show_parse_requirements "$@"
      shift $#
      ;;

    validate)
      action="validate"
      shift
      bamon_config_validate_parse_requirements "$@"
      shift $#
      ;;

    # :command.command_fallback
    "")
      bamon_config_usage >&2
      exit 1
      ;;

    *)
      printf "invalid command: %s\n" "$action" >&2
      exit 1
      ;;

  esac

  # :command.parse_requirements_while
  while [[ $# -gt 0 ]]; do
    key="$1"
    case "$key" in

      -?*)
        printf "invalid option: %s\n" "$key" >&2
        exit 1
        ;;

      *)
        # :command.parse_requirements_case
        # :command.parse_requirements_case_simple
        printf "invalid argument: %s\n" "$key" >&2
        exit 1

        ;;

    esac
  done

}

